@{
    Layout = "_MainLayout";
    ViewData["Title"] = "Book Delete";
}

@model Book

<style>
    .btn-rectangle {
        background-color: #007BFF;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5;
    }

        .btn-rectangle:hover {
            background-color: #0056b3;
            color: #fff;
            text-decoration: none;
        }
</style>

<h1>Delete book?</h1>
<input type="hidden" asp-for="BookId" />
<div class="mb-3">
    <label asp-for="ISBN" class="form-label">ISBN</label>
    <input asp-for="ISBN" class="form-control" readonly />
</div>
<div class="mb-3">
    <label asp-for="Title" class="form-label">Title</label>
    <input asp-for="Title" class="form-control" readonly />
</div>
<div class="mb-3">
    <label asp-for="Price" class="form-label">Price</label>
    <input asp-for="Price" class="form-control" readonly />
</div>
<div class="mb-3">
    <label asp-for="AuthorId" class="form-label">Author</label>
    @foreach (var author in ViewBag.Authors)
    {
        if (author.AuthorId == Model.AuthorId)
        {
            <input value="@author.FirstName @author.LastName" class="form-control" readonly />
        }
    }
</div>
<div class="mb-3">
    <label asp-for="GenreId" class="form-label">Genre</label>
    @foreach (var genre in ViewBag.Genres)
    {
        if (genre.GenreId == Model.GenreId)
        {
            <input value="@genre.Name" class="form-control" readonly />
        }
    }
</div>

<a asp-controller="Book" asp-action="DeleteConfirmed" asp-route-id="@Model.BookId" class="btn btn-primary btn-rectangle">Confirm delete</a>
<a asp-controller="Book" asp-action="Index" class="btn btn-primary btn-rectangle">Cancel</a>