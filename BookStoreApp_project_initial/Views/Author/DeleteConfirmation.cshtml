@model AuthorDeleteViewModel
@{
    ViewData["Title"] = "Delete Author Confirmation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h2>Delete Author Confirmation</h2>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this author?</h3>
            <p>Author: @Model.Author.FirstName @Model.Author.LastName</p>
            <p class="text-danger">This action will also delete the following books:</p>
            <ul>
                @foreach (var book in Model.RelatedBooks)
                {
                    <li>@book.Title</li>
                }
            </ul>
            <form asp-action="ConfirmDelete" asp-route-id="@Model.Author.AuthorId" method="post">
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <a asp-controller="Author" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>