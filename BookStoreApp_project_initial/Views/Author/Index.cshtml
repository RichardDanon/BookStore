@model PagedList<Author>
@{
    ViewData["Title"] = "Author List";
}

@if (TempData.Keys.Contains("message"))
{
    <h4 class="bg-success p-2">@TempData["message"]</h4>
}

<div>
    <h2>Author List</h2>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="text-white bg-dark">
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Items)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        <li class="page-item @((Model.PageNumber == 1) ? "disabled" : "")">
            <a class="page-link" href="@(Url.Action("Index", "Author", new { page = 1, pageSize = Model.PageSize }))">First</a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                <a class="page-link" href="@(Url.Action("Index", "Author", new { page = i, pageSize = Model.PageSize }))">@i</a>
            </li>
        }
        <li class="page-item @((Model.PageNumber == Model.TotalPages) ? "disabled" : "")">
            <a class="page-link" href="@(Url.Action("Index", "Author", new { page = Model.PageNumber + 1, pageSize = Model.PageSize }))">Next</a>
        </li>
    </ul>
</div>
