@model Author

@{
    ViewData["Title"] = "Author Edit Confirmation";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Confirm Edit for Author</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Author" asp-action="ConfirmEdit" method="post">
                <input type="hidden" asp-for="AuthorId" />
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" readonly />
                </div>
                <button type="submit" class="btn btn-success me-2">Confirm</button>
                <a asp-controller="Author" asp-action="Index" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>